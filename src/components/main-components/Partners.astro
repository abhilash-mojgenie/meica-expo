---
import SubHeading from "../small-components/SubHeading.astro";
import ParticipatingSubheading from "../small-components/ParticipatingSubheading.astro";
import GoldSponsorCard from "../small-components/GoldSponsorCard.astro";
import SilverSponsorCard from "../small-components/SilverSponsorCard.astro";
---

<div
  class="xl:pb-[100px] xl:pt-[50px] xl:px-[80px] bg-[#2B3D4F] xl:mt-[50px] md:p-[50px] xl:p-0"
>
  <SubHeading title="Participating Companies" white />

  <div class="mt-[72px]">
    <ParticipatingSubheading title="Principle Sponsor" />

    <div class="flex justify-center md:py-[20px] lg:my-[45px] 2xl:my-[85px]">
      <div
        class="bg-white rounded-[20px] xl:w-[576px] xl:h-[215px] flex justify-center items-center border-sponsor"
      >
        <img
          src="/assets/img/partners/petroleum-oman.png"
          class="object-cover rounded-[20px]"
          alt=""
        />
      </div>
    </div>
  </div>

  <div class="">
    <ParticipatingSubheading title="Gold Sponsor" />

    <div
      class="my-[30px] lg:my-[72px] grid grid-cols-2 gap-[25px] lg:grid-cols-3 lg:gap-[50px] xl:gap-[100px] 2xl:gap-[168px]"
    >
      <GoldSponsorCard src="/assets/img/partners/hitachi.png" />
      <GoldSponsorCard src="/assets/img/partners/honey-well.png" />

      <GoldSponsorCard src="/assets/img/partners/acet-solutions.png" />
    </div>
  </div>

  <div class="">
    <ParticipatingSubheading title="Silver Sponsor" />

    <div
      class="my-[30px] lg:my-[72px] grid lg:grid-cols-4 grid-cols-2 gap-[23px]"
    >
      <SilverSponsorCard src="/assets/img/partners/atco.png" />
      <SilverSponsorCard src="/assets/img/partners/xage-security.png" />

      <SilverSponsorCard src="/assets/img/partners/bently-nevada.png" />
      <SilverSponsorCard src="/assets/img/partners/fortinet.png" />
    </div>
  </div>

  <div class="">
    <ParticipatingSubheading title="Exhibitors" />

    <div
      class="md:mt-[30px] lg:mt-[72px] grid grid-cols-3 lg:grid-cols-4 gap-[23px]"
    >
      <SilverSponsorCard src="/assets/img/partners/drager-logo.png" />
      <SilverSponsorCard src="/assets/img/partners/ccc-logo.png" />

      <SilverSponsorCard src="/assets/img/partners/durag-logo.png" />
      <SilverSponsorCard src="/assets/img/partners/cyberium-logo.png" />
      <SilverSponsorCard src="/assets/img/partners/beamex-logo.png" />
      <SilverSponsorCard src="/assets/img/partners/sherbiny-logo.png" />

      <SilverSponsorCard src="/assets/img/partners/envea-logo.png" />
      <SilverSponsorCard src="/assets/img/partners/fortinet.png" />
    </div>
  </div>
</div>
