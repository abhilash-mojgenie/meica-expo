---
const { src, name, pos, com } = Astro.props;
---

<div
  class="flex flex-col items-center gap-2 lg:gap-[20px] xl:gap-[33px] z-10 w-full"
>
  <div class="w-full">
    <img
      src={src}
      class="x w-[162px] h-[162px] rounded-full object-cover mx-auto"
      alt=""
    />
  </div>
  <div class="flex flex-col items-center w-full">
    <p class="text-[#2B3D4F] font-semibold text-[20px] whitespace-nowrap">
      {name}
    </p>
    <p class="mt-[7px] md:mt-[1px] text-[16px]">
      {pos}
    </p>
    <p class="font-semibold text-[16px]">{com}</p>
  </div>
</div>
