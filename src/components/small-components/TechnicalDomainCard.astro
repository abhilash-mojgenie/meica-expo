---
const { src, title } = Astro.props;
---

<div class="">
  <div
    class="xl:w-[380px] w-full relative rounded-[20px] mb-[50px] lg:mb-[90px] xl:mb-[176px]"
  >
    <img
      src={src}
      class="xl:w-[370px] w-full md:h-[435px] rounded-[20px] object-cover"
      alt=""
    />
    <div
      class="border border-[#14D8C6] rounded-tr-[20px] md:w-[550px] w-[310px] lg:w-[425px] xl:w-[330px] bg-[#14D8C6] absolute top-[240px] md:top-[383px] left-0"
    >
      <p
        class="font-semibold 2xl:text-[28px] xl:text-[26px] text-[22px] md:text-[28px] lg:text-[22px] text-white pl-[28px] pt-[26px] pb-[32px]"
      >
        {title}
      </p>
    </div>
  </div>
</div>
