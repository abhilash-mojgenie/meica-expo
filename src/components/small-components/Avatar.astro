---
const { src, name, pos, com } = Astro.props;
---

<div class="flex flex-col items-center gap-2 lg:gap-[20px] xl:gap-[33px] z-10">
  <img
    src={src}
    class="xl:h-[250px] xl:w-[250px] md:w-[150px] md:h-[150px] lg:w-[200px] lg:h-[200px] rounded-full object-cover"
    alt=""
  />
  <div class="flex flex-col items-center">
    <p class="text-[#2B3D4F] font-semibold text-[25px] xl:text-[36px]">
      {name}
    </p>
    <p class="mt-[1px] text-[18px] xl:text-[22px]">{pos}</p>
    <p class="font-semibold text-[17px] xl:text-[22px]">{com}</p>
  </div>
</div>
