---
const { src, name, pos, com, top } = Astro.props;
---

<div
  class="flex flex-col items-center gap-2 lg:gap-[20px] xl:gap-[33px] z-10 w-full"
>
  <div class="w-full">
    <img
      src={src}
      class={`xl:h-[250px] xl:w-[250px] md:w-[150px] md:h-[150px] lg:w-[200px] lg:h-[200px] w-[162px] h-[132px] rounded-full object-cover mx-auto ${top ? "object-top" : ""}`}
      alt=""
    />
  </div>
  <div class="flex flex-col items-center w-full">
    <p
      class="text-[#2B3D4F] font-semibold md:text-[25px] xl:text-[36px] text-[20px] whitespace-nowrap"
    >
      {name}
    </p>
    <p class="mt-[7px] md:mt-[1px] text-[16px] md:text-[17px] xl:text-[22px]">
      {pos}
    </p>
    <p class="font-semibold text-[16px] md:text-[17px] xl:text-[22px]">{com}</p>
  </div>
</div>
