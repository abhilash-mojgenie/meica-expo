---
const { src, name, pos, com } = Astro.props;
---

<div class="flex flex-col items-center gap-[33px] z-10">
  <img src={src} class="h-[250px] w-[250px] rounded-full object-cover" alt="" />
  <div class="flex flex-col items-center">
    <p class="text-[#2B3D4F] font-semibold text-[36px]">{name}</p>
    <p class="mt-[1px] text-[22px]">{pos}</p>
    <p class="font-semibold text-[22px]">{com}</p>
  </div>
</div>
